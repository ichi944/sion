datasource db {
  provider = "sqlite"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Epic {
  id Int @id @default(autoincrement())
  title String
}

model Task {
  id    Int     @id @default(autoincrement())
  label String
  done  Boolean @default(false)
}
