datasource db {
  provider = "sqlite"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Epic {
  id Int @id @default(autoincrement())
  title String
  storyPoint StoryPoint?
}

model Task {
  id    Int     @id @default(autoincrement())
  label String
  done  Boolean @default(false)
}

model StoryPoint {
  id Int @id @default(autoincrement())
  epic Epic @relation(fields: [epicId], references: [id])
  epicId Int
  point Int
}
